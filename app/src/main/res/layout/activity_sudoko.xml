<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:columnWidth="10dp"
    android:numColumns="auto_fit"
    android:verticalSpacing="10dp"
    android:horizontalSpacing="1dp"
    android:stretchMode="columnWidth"
    android:gravity="fill"



 >

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r1c1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:src="@drawable/num1"
        android:tag="1"
        android:onClick="imageChange"
        android:scaleType="fitXY"/>

    <ImageButton
        android:onClick="imageChange"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r1c2"
        android:tag="2"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/r1c1"
        android:src="@drawable/num2"
        android:scaleType="fitXY"/>

    <ImageButton
        android:tag="2!"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r1c3"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/r1c2"
        android:src="@drawable/num2red"
        android:scaleType="fitXY"/>

    <ImageButton

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r2c1"
        android:tag="1!"
        android:layout_below="@+id/r1c1"
        android:layout_alignParentStart="true"
        android:src="@drawable/num1red"
        android:scaleType="fitXY"/>

    <ImageButton
        android:onClick="imageChange"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r2c2"
        android:tag="3"
        android:layout_below="@+id/r1c1"
        android:layout_toEndOf="@+id/r1c1"
        android:src="@drawable/num3"
        android:scaleType="fitXY"/>

    <ImageButton
        android:onClick="imageChange"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r2c3"
        android:tag="3"
        android:layout_below="@+id/r1c2"
        android:layout_toEndOf="@+id/r2c2"
        android:src="@drawable/num3"
        android:scaleType="fitXY"/>

    <ImageButton
        android:tag="2"
        android:onClick="imageChange"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r3c1"
        android:layout_below="@+id/r2c1"
        android:layout_alignParentStart="true"
        android:src="@drawable/num2"
        android:scaleType="fitXY"/>

    <ImageButton
        android:onClick="imageChange"
        android:tag="1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r3c2"
        android:layout_below="@+id/r2c1"
        android:layout_toEndOf="@+id/r2c1"
        android:src="@drawable/num1"
        android:scaleType="fitXY"/>

    <ImageButton

        android:onClick="imageChange"
        android:tag="3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/r3c3"
        android:layout_below="@+id/r2c2"
        android:layout_toEndOf="@+id/r3c2"
        android:src="@drawable/num3"
        android:scaleType="fitXY"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        android:id="@+id/button2"
        android:layout_below="@+id/r3c1"
        android:layout_centerHorizontal="true"
        android:onClick="check" />

    <TextView
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/timer"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

</RelativeLayout>